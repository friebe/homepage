---
import { Image } from "astro:assets";
import Logo from "../components/logo.svg";
const { showLogo } = Astro.props;

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="sticky top-0 z-10 backdrop-blur-md">
  <nav
    class="px-4 md:px-6 py-2 max-w-[700px] mx-auto flex justify-between items-center"
  >
    <a href="/" tabindex={showLogo ? "-1" : "0"}>
      <Image
        class:list={[
          "rounded-full object-cover h-10 w-10",
          { invisible: showLogo },
        ]}
        src={Logo}
        alt="Logo Jan Friebe"
      />
    </a>
    <ul class="flex items-center gap-6">
      <li class="list-none">
        <a
          class:list={[
            "px-4 py-2 text-zinc-400 rounded-full hover:transition-colors hover:text-zinc-200",
            { "bg-orange-600 !text-zinc-200": currentPath === "" },
          ]}
          href="/">Home</a
        >
      </li>
      <li class="list-none">
        <a
          class:list={[
            "px-4 py-2 text-zinc-400 rounded-full hover:transition-colors hover:text-zinc-200",
            { "bg-orange-600 !text-zinc-200": currentPath === "about" },
          ]}
          href="/about">About</a
        >
      </li>
      <li class="list-none">
        <a
          class:list={[
            "px-4 py-2 text-zinc-400 rounded-full hover:transition-colors hover:text-zinc-200",
            { "bg-orange-600 !text-zinc-200": currentPath === "guestbook" },
          ]}
          href="/guestbook">Guestbook</a
        >
      </li>
    </ul>
  </nav>
</header>
